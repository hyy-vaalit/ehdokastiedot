<head>
  <title>HYYn edustajistovaalit</title>
  <%= csrf_meta_tags %>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <meta name="description" content="HYYn edustajistovaalit">
  <meta name="author" content="PG">

  <meta name="viewport" content="width=device-width">

  <%# <script src="/js/libs/modernizr-2.5.3.min.js"></script> %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <!--[if IE 6]><%= stylesheet_link_tag 'formtastic_ie6' %><![endif]-->
  <!--[if IE 7]><%= stylesheet_link_tag 'formtastic_ie7' %><![endif]-->

  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
<body>

  <header class="title">

    <nav>
      <div id="logo-main">
        <a href="/"><img src="/images/hyy/logo.png" height="72" width="390"></a>
      </div>

      <ul class="main">
        <% if current_advocate_user %>
          <li>
            <%= current_advocate_user.email %>
            <% if current_admin_user %>
              <br>
              <u>ADMIN</u>: <%= current_admin_user.email %>
            <% end %>
          </li>
          <li>&raquo; <%= link_to "Kirjaudu ulos", destroy_advocate_user_session_path %></li>
        <% end %>
      </ul>
    </nav>


  </header>


  <div role="main" class="content">

    <% if flash[:alert] %>
      <div class="alert alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:info] %>
      <div class="alert alert-info">
        <%= flash[:info] %>
      </div>
    <% end %>

    <nav class="path">
      <% if @_nav_paths %>
        <%= link_to("Etusivu", root_path) %>
        <% @_nav_paths.each do |nav_path| %>
          <% nav_path.each do |link_text, link_url| %>
            &raquo; <%= link_url ? link_to(link_text, link_url) : link_text %>
          <% end %>
        <% end %>
      <% end %>
    </nav>

    <%= yield %>
  </div>

  <footer>
    <address>
      Helsingin yliopiston ylioppilaskunta &diamond; vaalit@hyy.fi
    </address>
  </footer>

  <% if Rails.env.production? %>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-35625600-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  <% end %>

</body>
</html>
