<p>
  &larr; <%= link_to 'Takaisin hallintapaneeliin', admin_dashboard_path %>
</p>

<h1>Ehdokaslista</h1>
<p>
  &raquo; <%= link_to "Lataa CSV", manage_candidates_path(:format=>:csv) %>
</p>

<table>
  <tr>
    <th>Ehdokasnumero</th>
    <th>Ehdokasnimi</th>
    <th>Opiskelijanumero</th>
    <th>Vaaliliitto</th>
    <th>Vaalirengas</th>
    <th>Huomiot</th>
  </tr>
<% @candidates.each do |candidate| -%>
  <tr>
    <td><%= candidate.candidate_number %></td>
    <td><%= link_to candidate.candidate_name, admin_candidate_path(candidate.id) %></td>
    <td><%= candidate.student_number %></td>
    <td><%= candidate.electoral_alliance.shorten if candidate.electoral_alliance and candidate.electoral_alliance.shorten %></td>
    <td><%= candidate.electoral_alliance.electoral_coalition.shorten if candidate.electoral_alliance and candidate.electoral_alliance.electoral_coalition and candidate.electoral_alliance.electoral_coalition.shorten %></td>
    <td><%= candidate.notes %></td>
  </tr>
<% end -%>
</table>
