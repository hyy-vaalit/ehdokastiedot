<h1>Ilmoittaudu edustajistovaaliehdokkaaksi vaaliliittoon</h1>

<h2>Vaaliliiton tiedot</h2>
<%= render partial: "one_alliance", locals: { alliance: @alliance } %>

<h2>Ehdokastiedot</h2>
<%= semantic_form_for @candidate, :url => registrations_candidate_path(invite_code: @invite_code_upcase) do |f| %>
  <%= render partial: "common/candidates/form",
    locals: {
      candidate: @candidate,
      f: f,
      read_only: false
    }
  %>

  <li class="input required" id="candidate_electoral_alliance_id">
    <label
      for="candidate_electoral_alliance_id"
      class="label">Vaaliliitto<abbr title="required">*</abbr>
    </label>
    <span>
      <%= @alliance.name %>
    </span>
  </li>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button, :label => "Tallenna" %>
  <% end %>
<% end %>
